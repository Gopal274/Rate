
{
  "entities": {
    "Product": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Product",
      "type": "object",
      "description": "Represents a product with its core, unchanging details.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the product."
        },
        "unit": {
          "type": "string",
          "description": "Unit of the product (e.g., kg, piece)."
        },
        "partyName": {
          "type": "string",
          "description": "Name of the party associated with the product."
        },
        "category": {
          "type": "string",
          "description": "Category of the product."
        }
      },
      "required": [
        "name",
        "unit",
        "partyName",
        "category"
      ]
    },
    "Rate": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Rate",
      "type": "object",
      "description": "Represents a rate entry for a product at a specific point in time.",
      "properties": {
        "rate": {
          "type": "number",
          "description": "The rate of the product."
        },
        "gst": {
          "type": "number",
          "description": "GST percentage applicable at the time of this rate."
        },
        "pageNo": {
          "type": "number",
          "description": "Page number where this rate is recorded."
        },
        "billDate": {
          "type": "string",
          "description": "Date of the bill for this rate.",
          "format": "date-time"
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp when the rate was recorded.",
          "format": "date-time"
        }
      },
      "required": [
        "rate",
        "gst",
        "pageNo",
        "billDate",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "google.com",
      "password"
    ]
  },
  "firestore": {
      "collections": {
          "products": {
            "schema": { "$ref": "#/entities/Product" },
            "description": "Stores product documents.",
            "subcollections": {
              "rates": {
                "schema": { "$ref": "#/entities/Rate" },
                "description": "Stores the complete rate history for a product."
              }
            }
          }
      }
  }
}
