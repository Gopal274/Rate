rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isSignedIn() {
      return request.auth != null;
    }
    
    match /products/{productId} {
      // Allow users to get a single product they own.
      allow get: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      // Allow users to list products they own via a query.
      allow list: if isSignedIn() && request.query.where.ownerId == request.auth.uid;

      // Allow users to create, update, or delete products they own.
      allow write: if isSignedIn() && request.auth.uid == request.resource.data.ownerId;
      
      match /rates/{rateId} {
        // Allow full read/write access to rates for the product owner.
        allow read, write: if isSignedIn() && get(/databases/$(database)/documents/products/$(productId)).data.ownerId == request.auth.uid;
      }
    }
  }
}
